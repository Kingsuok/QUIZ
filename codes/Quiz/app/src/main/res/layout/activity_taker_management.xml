<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="26dp">

    <Button
        android:background="@drawable/cornersorange"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        android:textSize="26sp"
        android:id="@+id/addTakers"
        android:text="Add Takers"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/cornerslightorange"
        android:padding="10dp"
        android:layout_marginTop="15dp"
        android:orientation="vertical">
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="25sp"
            android:textStyle="italic"
            android:gravity="center"
            android:layout_gravity="center"
            android:id="@+id/takerCheck"
            android:hint="Input ID to check"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/cornersorange"
            android:layout_gravity="center"
            android:textSize="26sp"
            android:id="@+id/checkTaker"
            android:text="Check a Taker"/>

    </LinearLayout>


<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/cornerslightorange"
    android:padding="10dp"
    android:layout_marginTop="15dp"
    android:orientation="vertical">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="25sp"
        android:textStyle="italic"
        android:gravity="center"
        android:layout_gravity="center"
        android:id="@+id/takerDelete"
        android:hint="Input ID to delete"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/cornersorange"
        android:layout_gravity="center"
        android:textSize="26sp"
        android:id="@+id/deleteTaker"
        android:text="Delete a Taker"/>

</LinearLayout>





    <Button
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="50dp"
        android:background="@drawable/cornersorange"
        android:textSize="26sp"
        android:layout_gravity="center"
        android:id="@+id/clearTakers"
        android:text="Delete All Takers"/>



</LinearLayout>
