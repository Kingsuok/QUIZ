<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp">
        <TableRow>
            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="italic"
                android:textSize="25sp"
                android:text="ID:"/>
            <TextView
                android:id="@+id/IDDisplay"
                android:layout_marginLeft="10dp"
                android:textColor="#ff6600"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="italic"
                android:textSize="25sp"
                android:text="ID:"/>
        </TableRow>
        <TableRow
            android:layout_marginTop="10dp">
            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="italic"
                android:textSize="25sp"
                android:text="Password:"/>
            <TextView
                android:id="@+id/passwordDisplay"
                android:layout_marginLeft="10dp"
                android:textColor="#ff6600"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="italic"
                android:textSize="25sp"
                android:text="password"/>
        </TableRow>
        <TableRow
            android:layout_marginTop="10dp">
            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="italic"
                android:textSize="25sp"
                android:text="Login Num:"/>
            <TextView
                android:id="@+id/loginNumberDisplay"
                android:layout_marginLeft="10dp"
                android:textColor="#ff6600"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="italic"
                android:textSize="25sp"
                android:text="login"/>
        </TableRow>
        <TableRow
            android:layout_marginTop="10dp">
            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="italic"
                android:textSize="25sp"
                android:text="Correct Num:"/>
            <TextView
                android:id="@+id/correctDisplay"
                android:layout_marginLeft="10dp"
                android:textColor="#ff6600"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="italic"
                android:textSize="25sp"
                android:text="correct"/>
        </TableRow>
        <TableRow
            android:layout_marginTop="10dp">

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="italic"
                android:textSize="25sp"
                android:text="Wrong Num:"
                android:id="@+id/textView" />

            <TextView
                android:id="@+id/wrongDisplay"
                android:layout_marginLeft="10dp"
                android:textColor="#ff6600"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="italic"
                android:textSize="25sp"
                android:text="wrong:"/>
        </TableRow>
    </TableLayout>

</LinearLayout>
