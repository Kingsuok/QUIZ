<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="15dp"
    android:orientation="vertical">

    <Button
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@drawable/cornersblue"
        android:layout_marginTop="10dp"
        android:text="Question Management"
        android:textSize="30sp"
        android:id="@+id/questionManagement"/>

    <Button
        android:id="@+id/takerManagement"
        android:layout_width="match_parent"
        android:background="@drawable/cornersblue"
        android:layout_marginTop="10dp"
        android:text="Taker        Management"
        android:textSize="30sp"
        android:layout_height="100dp" />
    <Button
        android:id="@+id/statisticManagement"
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:background="@drawable/cornersblue"

        android:textSize="30sp"
        android:text="Statistic Management"

        android:layout_height="100dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/cornersgrey"
        android:layout_marginTop="10dp"
        android:orientation="vertical">
        <EditText
            android:layout_width="match_parent"

            android:textSize="25sp"
            android:textStyle="italic"
            android:gravity="center"
            android:hint="Time to set (10~30)"
            android:inputType="number"
            android:layout_height="60dp"
            android:id="@+id/period" />

        <Button
            android:id="@+id/setTime"
            android:layout_width="match_parent"
            android:background="@drawable/cornersblue"
            android:textSize="30sp"
            android:text="Set Time"

            android:layout_height="60dp" />
    </LinearLayout>




</LinearLayout>
